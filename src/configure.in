AC_INIT(configure.in)

AM_CONFIG_HEADER(config.h)
AM_INIT_AUTOMAKE(hypnos, 0.1)

AC_LANG_CPLUSPLUS
AC_PROG_CXX
AM_PROG_LIBTOOL

AM_DL()
AM_PATH_WEFTS()

AC_CHECK_FUNCS(strlwr strupr)

INCLUDES='-I$(top_srcdir)/libhypnos/ -I$(top_srcdir)/includes/'
CXXFLAGS="$CXXFLAGS $INCLUDES -Wall -Wno-reorder -Wno-switch-enum $WEFTS_CXXFLAGS"
LDFLAGS="$LDFLAGS $WEFTS_LIBS"

AC_SUBST(CXXFLAGS)
AC_SUBST(LDFLAGS)

AC_OUTPUT(Makefile libhypnos/Makefile libhypnos/muls/Makefile src/archs/Makefile src/backend/Makefile src/encryption/Makefile src/extras/Makefile src/objects/cchar/Makefile src/objects/citem/Makefile src/objects/cnpc/Makefile src/objects/Makefile src/skills/Makefile src/networking/Makefile src/archetypes/Makefile src/Makefile)
