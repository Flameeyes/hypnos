AC_INIT(configure.in)

AM_CONFIG_HEADER(config.h)
AM_INIT_AUTOMAKE(hypnos, 0.1)

AC_LANG_CPLUSPLUS
AC_PROG_CXX
AC_PROG_AWK
AC_PROG_CPP
AC_PROG_INSTALL
AC_PROG_LN_S
AC_PROG_MAKE_SET
AC_PROG_RANLIB
AM_PROG_LIBTOOL

AM_DL()
AM_PATH_WEFTS()

# Checks for header files.
AC_HEADER_STDC
AC_CHECK_HEADERS([fcntl.h limits.h memory.h stdint.h stdlib.h sys/time.h sys/timeb.h unistd.h winbase.h winreg.h wincon.h netinet/in.h])
# Checks for typedefs, structures, and compiler characteristics.
AC_HEADER_STDBOOL
AC_C_CONST
AC_C_INLINE
AC_TYPE_PID_T
AC_C_RESTRICT
AC_HEADER_TIME
AC_STRUCT_TM
AC_C_VOLATILE
AC_CHECK_TYPE(ssize_t, :, AC_DEFINE(ssize_t, __int64, [define ssize_t to __int64 if it's missing in default includes]))

# Checks for library functions.
AC_FUNC_FORK
AC_FUNC_MALLOC
AC_FUNC_MMAP
AC_TYPE_SIGNAL
AC_FUNC_VPRINTF
AC_CHECK_FUNCS([basename ftime gettimeofday memset munmap strchr strstr strtol strtoul strtoull strlwr strupr uname asprintf strcmpi strcasecmp strncmpi strncasecmp kbhit getch ntohl ntohs htons htonl])

# Adding include dirs and WEFTS_ variables
INCLUDES='-I$(top_srcdir)/libhypnos/ -I$(top_srcdir)/includes/'
CXXFLAGS="$CXXFLAGS $INCLUDES -Wall -Wno-reorder -Wno-switch-enum $WEFTS_CXXFLAGS"
LDFLAGS="$LDFLAGS $WEFTS_LIBS"

AC_SUBST(CXXFLAGS)
AC_SUBST(LDFLAGS)

AC_CONFIG_FILES([Makefile
                 libhypnos/Makefile
                 libhypnos/muls/Makefile
                 src/Makefile
                 src/archetypes/Makefile
                 src/archs/Makefile
                 src/backend/Makefile
                 src/encryption/Makefile
                 src/extras/Makefile
                 src/networking/Makefile
                 src/objects/Makefile
                 src/objects/cchar/Makefile
                 src/objects/citem/Makefile
                 src/objects/cnpc/Makefile
                 src/skills/Makefile])

AC_OUTPUT
